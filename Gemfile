source 'https://rubygems.org'

# gem 'jekyll', '~> 4.2.2' # or
#gem 'minima', '~> 2.5' # This is the default theme for new Jekyll sites. You may change this to
gem 'rack'
gem 'wdm', '~> 0.1.1', :platforms => [:mingw, :x64_mingw, :mswin] # Performance-booster for watching directories on Windows
gem 'webrick'

group :jekyll_plugins do
  gem 'github-pages'
  gem 'jekyll-feed'
  gem 'jekyll-haml'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  # gem 'jekyll-admin', "0.9.0"
end

# Windows and JRuby does not include zoneinfo files, so bundle the tzinfo-data gem
# and associated library.
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem 'tzinfo', '~> 1.2'
  gem 'tzinfo-data'
end
